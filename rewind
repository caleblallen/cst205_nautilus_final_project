def get_sound():
  return makeSound(pickAFile())

def reverse(source):
  length = getLength(source)
  reverse = makeEmptySound(length + 1)
  for samples in range(length):
    value = getSampleValueAt(source, samples)
    setSampleValueAt(reverse, length - samples, value)
  return reverse
  
def shorten(source):
  length = getLength(source)
  short = makeEmptySound(length / 8 + 1)
  for samples in range(0, length, 8):
    value = getSampleValueAt(source, samples)
    setSampleValueAt(short, (length - samples) / 8, value)
  return short
  
def rewind(source):
  return shorten(reverse(source))